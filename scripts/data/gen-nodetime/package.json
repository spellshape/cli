{
  "name": "nodetime",
  "version": "1.0.0",
  "description": "Spellshape's Swiss knife",
  "scripts": {
    "prebuild": "rm -rf dist && tsc",
    "build": "pkg --public-packages \"*\" --public --no-bytecode -c package.json -o nodetime nodetime"
  },
  "dependencies": {
    "@confio/relayer": "0.5.1",
    "@cosmjs/crypto": "0.28.11",
    "@cosmjs/encoding": "0.28.11",
    "@cosmjs/proto-signing": "0.28.11",
    "@cosmjs/stargate": "0.28.11",
    "@cosmjs/tendermint-rpc": "0.28.11",
    "js-yaml": "^4.0.0",
    "json-rpc-2.0": "^0.2.16",
    "long": "^4.0.0",
    "pkg": "^5.6.0",
    "protobufjs": "^7.1.1",
    "sinon": "^9.2.4",
    "swagger-combine": "^1.3.0",
    "swagger-typescript-api": "^9.2.0",
    "ts-proto": "^1.123.0"
  },
  "bin": "nodetime",
  "pkg": {
    "targets": [
      "node16-linux-x64",
      "node16-linux-arm64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "assets": [
      "./node_modules/typescript/lib/**/*.ts",
      "./node_modules/protobufjs/**/*",
      "./node_modules/long/**/*",
      "./node_modules/@types/**/*",
      "./node_modules/@cosmjs/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.13.45",
    "typescript": "^4.2.4"
  }
}